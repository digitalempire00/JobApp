<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CompanyRegistration">

    <TextView

        android:id="@+id/textViewUserRegistrationNotUsable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Company Registration"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"

                app:srcCompat="@drawable/simple_placeholder" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="Email"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="Email"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="phone Number"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextPhNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="Password"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="Company Name"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="Company Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="Discription"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextCompanyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="Discription"
                    android:inputType="textMultiLine|text"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Country"
                            android:textColor="@android:color/black" />

                        <EditText

                            android:id="@+id/editTextCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/widget_border"
                            android:hint="Country"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="City"
                            android:textColor="@android:color/black" />

                        <EditText

                            android:id="@+id/editTextCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/widget_border"
                            android:hint="City"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ZiP"
                            android:textColor="@android:color/black" />

                        <EditText

                            android:id="@+id/editTextZip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/widget_border"
                            android:hint="Zip"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <EditText

                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_border"
                    android:hint="Full Address"
                    android:inputType="textMultiLine|text"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/textViewUserRegistrationNotUsable5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oldstandardttregularitalic"
                    android:gravity="center"
                    android:text="Website Link"

                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/editTextTitleWebLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/widget_border"
                    android:hint="WebSite Link"
                    android:inputType="textMultiLine|text"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </LinearLayout>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttons_background"
                android:text="Submit"
                android:textColor="@color/top_text_color" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>